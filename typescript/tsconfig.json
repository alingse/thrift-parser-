{
    "compilerOptions": {
      "incremental": true,
      "target": "ESNEXT",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib/",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/*.ts"]
}
